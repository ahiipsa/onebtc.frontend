.issueContainer {
  background: #FFFFFF;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.04);
  border-radius: 4px;

  max-width 560px
  min-width 560px
}

.largeButtonContainer {
  width: 270px
  height 100px

  background: #FFFFFF;
  box-shadow: 0px 10px 21px rgba(0, 173, 232, 0.13);
  border-radius: 4px;
  position relative

  opacity 0.6
  cursor pointer

  .imgToken {
    margin-right 6px
    margin-bottom 2px
    height 20px
  }

  &.active {
    opacity 1

    &:after {
      display block
      position absolute
      content ''
      width: 100%
      height 4px
      bottom 0

      background: linear-gradient(269.98deg, #69FABC -0.02%, #00ADE8 100%);
    }
  }

  .title {
    font-weight bold
  }

  .description {
    //text-align right
    //width 100%
    //margin-right 60px
  }
}

.networkButton {
  opacity 0.8
  background white
  color: #212e5e

  &.active {
    opacity 1

    &:after {
      display block
      position absolute
      content ''
      width: 100%
      height 4px
      bottom 0

      background: linear-gradient(269.98deg, #69FABC -0.02%, #00ADE8 100%);
    }
  }
}
